<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="InsulinSensitivity.Eating.EatingPage"
             xmlns:global="clr-namespace:InsulinSensitivity"
             xmlns:converters="clr-namespace:BusinessLogicLayer.Converters;assembly=BusinessLogicLayer"
             xmlns:view="clr-namespace:BusinessLogicLayer.ViewModel;assembly=BusinessLogicLayer"
             Title="Приём пищи">

    <ContentPage.Resources>
        <converters:DecimalToStringConverter x:Key="DecimalToStringConverter"/>
    </ContentPage.Resources>

    <ContentPage.Content>
        <Grid>
            <ScrollView>
                <StackLayout
                    Margin="5">

                    <!--<Frame 
                        BackgroundColor="#2196F3" 
                        Padding="12" 
                        CornerRadius="3">

                        <Label 
                            Text="Приём пищи" 
                            HorizontalTextAlignment="Center" 
                            TextColor="White" 
                            FontSize="24"/>
                    </Frame>-->

                    <!-- Пища -->
                    <Frame
                        Style="{StaticResource Frame}">

                        <StackLayout
                            Spacing="0">

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="3*"/>
                                    <ColumnDefinition Width="auto"/>
                                </Grid.ColumnDefinitions>

                                <Label
                                    Grid.Column="0" Grid.ColumnSpan="2"
                                    Text="Пища"
                                    FontAttributes="Bold"
                                    FontSize="16"
                                    HorizontalOptions="CenterAndExpand"/>

                                <Button
                                    Grid.Column="1"
                                    Padding="0"
                                    HeightRequest="20"
                                    WidthRequest="50"
                                    Text="+"
                                    Command="{Binding Path=AddDimensionCommand}"/>
                            </Grid>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>

                                <StackLayout
                                    Spacing="0"
                                    Grid.Column="0">

                                    <Label
                                        Text="Исходный сахар:"/>
                                    <Entry
                                        x:Name="glucoseStart"
                                        Margin="0"
                                        view:Tag.Tag="GlucoseStart"
                                        Unfocused="Entry_Unfocused"
                                        Text="{Binding Path=GlucoseStart, Converter={StaticResource DecimalToStringConverter}}"
                                        Keyboard="Numeric"/>
                                </StackLayout>

                                <StackLayout
                                    Spacing="0"
                                    Grid.Column="1">

                                    <Label
                                        Text="Сахар на отработке: ?">

                                        <Label.GestureRecognizers>
                                            <TapGestureRecognizer
                                                Command="{x:Static global:GlobalMethods.ToolTipCommand}"
                                                CommandParameter="Это значение глюкозы крови НЕ нужно вводить сразу при создании нового приёма пищи: вы сможете ввести его позже. Отработка - это замер сахара через 4.5 - 5 часов после приёма пищи. При вводе этого числа приём пищи будет считаться закрытым и вы не сможете его редактировать"/>
                                        </Label.GestureRecognizers>
                                    </Label>
                                    <Entry
                                        Margin="0"
                                        view:Tag.Tag="GlucoseEnd"
                                        Unfocused="Entry_Unfocused"
                                        Text="{Binding Path=GlucoseEnd, Converter={StaticResource DecimalToStringConverter}}"
                                        Keyboard="Numeric"/>
                                </StackLayout>
                            </Grid>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>

                                <StackLayout
                                    Spacing="0"
                                    Grid.Column="0">

                                    <Label                                
                                        Text="Время отработки:"/>
                                    <TimePicker
                                        HeightRequest="{Binding Source={x:Reference glucoseStart}, Path=Height}"
                                        Time="{Binding Path=EndEatingTime}"/>
                                </StackLayout>

                                <!-- https://github.com/xamarin/Xamarin.Forms/issues/9033#issuecomment-762781496 -->
                                <Grid 
                                    Grid.Column="1"
                                    RowSpacing="0">

                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="auto"/>
                                    </Grid.RowDefinitions>

                                    <Label
                                        Grid.Row="0"
                                        Text="Дата отработки:"/>

                                    <DatePicker
                                        Grid.Row="1"
                                        HeightRequest="{Binding Source={x:Reference glucoseStart}, Path=Height}"
                                        Date="{Binding Source={x:Reference materialDatePickerEndEating}, Path=Date}"/>

                                    <DatePicker
                                        x:Name="materialDatePickerEndEating"
                                        Grid.Row="1"
                                        Visual="Material"
                                        Opacity="0"
                                        HeightRequest="0"
                                        Date="{Binding Path=EndEatingDate}"/>
                                </Grid>
                            </Grid>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>

                                <StackLayout
                                    Spacing="0"
                                    Grid.Column="0">

                                    <Label
                                        Text="Белки:"/>
                                    <Entry
                                        view:Tag.Tag="Protein"
                                        Unfocused="Entry_Unfocused"
                                        Text="{Binding Path=Protein}"
                                        Keyboard="Numeric"/>
                                </StackLayout>

                                <StackLayout
                                    Spacing="0"
                                    Grid.Column="1">

                                    <Label
                                        Text="Жиры:"/>
                                    <Entry
                                        view:Tag.Tag="Fat"
                                        Unfocused="Entry_Unfocused"
                                        Text="{Binding Path=Fat}"
                                        Keyboard="Numeric"/>
                                </StackLayout>

                                <StackLayout
                                    Spacing="0"
                                    Grid.Column="2">

                                    <Label
                                        Text="Углеводы:"/>
                                    <Entry
                                        view:Tag.Tag="Carbohydrate"
                                        Unfocused="Entry_Unfocused"
                                        Text="{Binding Path=Carbohydrate}"
                                        Keyboard="Numeric"/>
                                </StackLayout>
                            </Grid>

                            <StackLayout
                                BindableLayout.ItemsSource="{Binding IntermediateDimensions}"
                                Margin="0, 4, 0, 8"
                                Padding="5, 0">

                                <StackLayout.Style>
                                    <Style TargetType="StackLayout">
                                        <Style.Triggers>
                                            <DataTrigger 
                                                TargetType="StackLayout" 
                                                Binding="{Binding Source={x:RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.IntermediateDimensions.Count, TargetNullValue=0, FallbackValue=0}"
                                                Value="0">
                                                
                                                <Setter Property="IsVisible" Value="False"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackLayout.Style>
                                
                                <BindableLayout.ItemTemplate>
                                    <DataTemplate>
                                        <Frame
                                            Style="{StaticResource Frame}"
                                            Margin="0"
                                            BorderColor="LightBlue">

                                            <Frame.GestureRecognizers>
                                                <TapGestureRecognizer
                                                    Command="{Binding Source={x:RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.EditDimensionCommand}"
                                                    CommandParameter="{Binding .}"/>
                                            </Frame.GestureRecognizers>

                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition/>
                                                    <ColumnDefinition Width="auto"/>
                                                </Grid.ColumnDefinitions>

                                                <Label
                                                    Grid.Column="0">

                                                    <Label.Text>
                                                        <MultiBinding StringFormat="{}Время: {0:00}:{1:00} - Сахар: {2} ммол/л">
                                                            <Binding Path="DimensionTime.Hours"/>
                                                            <Binding Path="DimensionTime.Minutes"/>
                                                            <Binding Path="Glucose"/>
                                                        </MultiBinding>
                                                    </Label.Text>
                                                </Label>

                                                <StackLayout
                                                    Grid.Column="1"
                                                    Orientation="Horizontal"
                                                    Spacing="0">

                                                    <Button
                                                        Padding="0" Margin="0, 2, 0, 1"
                                                        HeightRequest="15"
                                                        WidthRequest="20"
                                                        BackgroundColor="Transparent"
                                                        FontSize="15"
                                                        Text="&#xe122;"
                                                        FontFamily="Typicons"
                                                        Command="{Binding Source={x:RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.RemoveDimensionCommand}"
                                                        CommandParameter="{Binding .}"/>
                                                </StackLayout>
                                            </Grid>
                                        </Frame>
                                    </DataTemplate>
                                </BindableLayout.ItemTemplate>
                            </StackLayout>
                        </StackLayout>
                    </Frame>

                    <!-- Инъекции -->
                    <Frame
                        Style="{StaticResource Frame}">

                        <StackLayout
                            Spacing="0">

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="3*"/>
                                    <ColumnDefinition Width="auto"/>
                                </Grid.ColumnDefinitions>

                                <Label
                                    Grid.Column="0" Grid.ColumnSpan="2"
                                    Text="Инъекции"
                                    FontAttributes="Bold"
                                    FontSize="16"
                                    HorizontalOptions="CenterAndExpand"/>

                                <Button
                                    Grid.Column="1"
                                    Padding="0"
                                    HeightRequest="20"
                                    WidthRequest="50"
                                    Text="+"
                                    Command="{Binding Path=AddInjectionCommand}"/>
                            </Grid>

                            <Label
                                Text="{Binding Path=EatingType.Name, StringFormat='Тип: {0}', FallbackValue='Не определён'}"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>

                                <StackLayout
                                    Spacing="0"
                                    Grid.Column="0">

                                    <Label
                                        Text="Время:"/>
                                    <TimePicker
                                        HeightRequest="{Binding Source={x:Reference entryDose}, Path=Height}"
                                        Time="{Binding Path=InjectionTime, Mode=TwoWay}"/>
                                </StackLayout>

                                <StackLayout
                                    Spacing="0"
                                    Grid.Column="1">

                                    <Label
                                        Text="Доза:"/>
                                    <Entry
                                        x:Name="entryDose"
                                        view:Tag.Tag="BolusDoseFact"
                                        Unfocused="Entry_Unfocused"
                                        Text="{Binding Path=BolusDoseFact, Converter={StaticResource DecimalToStringConverter}}"
                                        Keyboard="Numeric"/>
                                </StackLayout>

                                <StackLayout
                                    Spacing="0"
                                    Grid.Column="2">

                                    <Label
                                        Text="Пауза:"/>
                                    <Entry
                                        view:Tag.Tag="Pause"
                                        Unfocused="Entry_Unfocused"
                                        Text="{Binding Path=Pause}"
                                        Keyboard="Numeric"/>
                                </StackLayout>
                            </Grid>

                            <StackLayout
                                BindableLayout.ItemsSource="{Binding Injections}"
                                Margin="0, 4, 0, 8"
                                Padding="5, 0">

                                <StackLayout.Style>
                                    <Style TargetType="StackLayout">
                                        <Style.Triggers>
                                            <DataTrigger 
                                                TargetType="StackLayout" 
                                                Binding="{Binding Source={x:RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.Injections.Count, TargetNullValue=0, FallbackValue=0}"
                                                Value="0">

                                                <Setter Property="IsVisible" Value="False"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackLayout.Style>

                                <BindableLayout.ItemTemplate>
                                    <DataTemplate>
                                        <Frame
                                            Style="{StaticResource Frame}"
                                            Margin="0"
                                            BorderColor="LightBlue">

                                            <Frame.GestureRecognizers>
                                                <TapGestureRecognizer
                                                    Command="{Binding Source={x:RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.EditInjectionCommand}"
                                                    CommandParameter="{Binding .}"/>
                                            </Frame.GestureRecognizers>

                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition/>
                                                    <ColumnDefinition Width="auto"/>
                                                </Grid.ColumnDefinitions>

                                                <Label
                                                    Grid.Column="0">

                                                    <Label.Text>
                                                        <MultiBinding StringFormat="{}Время: {0:00}:{1:00} - Доза: {2}">
                                                            <Binding Path="InjectionTime.Hours"/>
                                                            <Binding Path="InjectionTime.Minutes"/>
                                                            <Binding Path="BolusDose"/>
                                                        </MultiBinding>
                                                    </Label.Text>
                                                </Label>

                                                <StackLayout
                                                    Grid.Column="1"
                                                    Orientation="Horizontal"
                                                    Spacing="0">

                                                    <!--<Button
                                                        Padding="0"
                                                        HeightRequest="10"
                                                        WidthRequest="10"
                                                        FontAttributes="Bold"
                                                        BackgroundColor="Transparent"
                                                        Text="&#xe0c3;"
                                                        FontFamily="Typicons"
                                                        Command="{Binding Source={x:RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.EditInjectionCommand}"
                                                        CommandParameter="{Binding .}"/>-->

                                                    <!--<BoxView
                                                        Margin="4, 0"
                                                        WidthRequest="1"
                                                        HeightRequest="3"
                                                        BackgroundColor="LightGray"/>-->

                                                    <Button
                                                        Padding="0" Margin="0, 2, 0, 1"
                                                        HeightRequest="15"
                                                        WidthRequest="20"
                                                        BackgroundColor="Transparent"
                                                        FontSize="15"
                                                        Text="&#xe122;"
                                                        FontFamily="Typicons"
                                                        Command="{Binding Source={x:RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.RemoveInjectionCommand}"
                                                        CommandParameter="{Binding .}"/>
                                                </StackLayout>
                                            </Grid>
                                        </Frame>
                                    </DataTemplate>
                                </BindableLayout.ItemTemplate>
                            </StackLayout>
                        </StackLayout>
                    </Frame>

                    <!-- Активность -->
                    <Frame
                        Style="{StaticResource Frame}">

                        <StackLayout
                            Spacing="0">

                            <Label
                                Text="Активность ?"
                                FontAttributes="Bold"
                                FontSize="16"
                                HorizontalOptions="CenterAndExpand">

                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer
                                        Command="{x:Static global:GlobalMethods.ToolTipCommand}"
                                        CommandParameter="Укажите здесь свою плановую активность. Выберите Тип, укажите продолжительность в минутах и через сколько часов после инъекции начнётся эта активность. Редактировать список активностей можно в соответствующем пункте Меню"/>
                                </Label.GestureRecognizers>
                            </Label>

                            <Label
                                Text="Тип:"/>
                            <Picker
                                ItemDisplayBinding="{Binding Path=Name}"                            
                                ItemsSource="{Binding Path=ExerciseTypes}"
                                SelectedItem="{Binding Path=ExerciseType, Mode=TwoWay}"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>

                                <StackLayout
                                    Spacing="0"
                                    Grid.Column="0">

                                    <Label
                                        Text="Продолжительность:"/>
                                    <Entry
                                        view:Tag.Tag="Duration"
                                        Unfocused="Entry_Unfocused"
                                        Text="{Binding Path=Duration}"
                                        Keyboard="Numeric"/>
                                </StackLayout>

                                <StackLayout
                                    Spacing="0"
                                    Grid.Column="1">

                                    <Label
                                        Text="Часов после инъекции:"/>
                                    <Entry
                                        view:Tag.Tag="HoursAfterInjection"
                                        Unfocused="Entry_Unfocused"
                                        Text="{Binding Path=HoursAfterInjection}"
                                        Keyboard="Numeric"/>
                                </StackLayout>
                            </Grid>
                        </StackLayout>
                    </Frame>

                    <!-- Базальный инсулин -->
                    <Frame
                        Style="{StaticResource Frame}"
                        IsVisible="{Binding Path=IsBasalDoseVisibility, Mode=OneWay}">

                        <StackLayout
                            Spacing="0">

                            <Label
                                Text="Базальный инсулин"
                                FontAttributes="Bold"
                                FontSize="16"
                                HorizontalOptions="CenterAndExpand"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>

                                <StackLayout
                                    Spacing="0"
                                    Grid.Column="0">

                                    <Label                                
                                        Text="Доза:"/>
                                    <Entry
                                        x:Name="basalDose"
                                        Keyboard="Numeric"
                                        view:Tag.Tag="BasalDose"
                                        Unfocused="Entry_Unfocused"
                                        Text="{Binding Path=BasalDose, Converter={StaticResource DecimalToStringConverter}}"/>
                                </StackLayout>

                                <StackLayout
                                    Spacing="0"
                                    Grid.Column="1">

                                    <Label                                
                                        Text="Время:"/>
                                    <TimePicker
                                        HeightRequest="{Binding Source={x:Reference basalDose}, Path=Height}"
                                        Time="{Binding Path=BasalInjectionTime}"/>
                                </StackLayout>

                                <!-- https://github.com/xamarin/Xamarin.Forms/issues/9033#issuecomment-762781496 -->
                                <Grid 
                                    Grid.Column="2"
                                    RowSpacing="0">

                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="auto"/>
                                    </Grid.RowDefinitions>

                                    <Label
                                        Grid.Row="0"
                                        Text="Дата:"/>

                                    <DatePicker
                                        Grid.Row="1"
                                        HeightRequest="{Binding Source={x:Reference basalDose}, Path=Height}"
                                        Date="{Binding Source={x:Reference materialDatePickerBasalDose}, Path=Date}"/>

                                    <DatePicker
                                        x:Name="materialDatePickerBasalDose"
                                        Grid.Row="1"
                                        Visual="Material"
                                        Opacity="0"
                                        HeightRequest="0"
                                        Date="{Binding Path=BasalInjectionDate}"/>
                                </Grid>
                            </Grid>
                        </StackLayout>
                    </Frame>
                    
                    <!-- Дополнительно -->
                    <Frame
                        Style="{StaticResource Frame}">

                        <StackLayout
                            Spacing="0">

                            <Label
                                Text="Дополнительно"
                                FontAttributes="Bold"
                                FontSize="16"
                                HorizontalOptions="CenterAndExpand"/>
                            
                            <!--<Label
                                Text="Активного инсулина в крови до инъекции:"/>
                            <Entry
                                Keyboard="Numeric"
                                view:Tag.Tag="ActiveInsulinStart"
                                Unfocused="Entry_Unfocused"
                                Text="{Binding Path=ActiveInsulinStart, Converter={StaticResource DecimalToStringConverter}}"/>

                            <Label
                                Text="Активного инсулина в крови на отработке:"/>
                            <Entry
                                IsReadOnly="True"
                                Text="{Binding Path=ActiveInsulinEnd, Converter={StaticResource DecimalToStringConverter}}"/>-->

                            <Grid
                                IsVisible="{Binding Path=IsMenstrualCycleStartVisibility, Mode=OneWay}">
                                
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <Label
                                    Grid.Column="0"
                                    Margin="0, 0, 0, 5"
                                    VerticalOptions="Center"
                                    Text="Начало менструального цикла:"/>
                                <Switch
                                    Grid.Column="1"
                                    VerticalOptions="Center"
                                    IsToggled="{Binding Path=IsMenstrualCycleStart}"/>
                            </Grid>

                            <Label
                                Text="Комментарий:"/>
                            <Editor
                                Keyboard="Chat"
                                AutoSize="TextChanges"
                                Text="{Binding Path=Comment}"/>

                            <!--<Label
                                Text="Информация:"/>
                            <Editor
                                Keyboard="Chat"
                                AutoSize="TextChanges"
                                IsReadOnly="True"
                                Text="{Binding Path=ActiveInformation}"/>-->
                        </StackLayout>
                    </Frame>

                    <!-- Расчёт -->
                    <Frame
                        Style="{StaticResource Frame}">

                        <StackLayout
                            Spacing="0">

                            <Label
                                Text="Расчёт"
                                FontAttributes="Bold"
                                FontSize="16"
                                HorizontalOptions="CenterAndExpand"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>

                                <StackLayout
                                    Spacing="0"
                                    Grid.Column="0">

                                    <Label
                                        Text="ФЧИ расчётный: ?">

                                        <Label.GestureRecognizers>
                                            <TapGestureRecognizer
                                                Command="{x:Static global:GlobalMethods.ToolTipCommand}"
                                                CommandParameter="Это значение является предположением программы о вашей чувствительности к инсулину. Оно учитывает ВСЕ исходные данные введённые выше"/>
                                        </Label.GestureRecognizers>
                                    </Label>
                                    <Entry
                                        Text="{Binding Path=InsulinSensitivityAuto, Converter={StaticResource DecimalToStringConverter}}"
                                        IsReadOnly="True"/>
                                </StackLayout>

                                <StackLayout
                                    Spacing="0"
                                    Grid.Column="1">

                                    <Label
                                        Text="Доза расчётная: ?">

                                        <Label.GestureRecognizers>
                                            <TapGestureRecognizer
                                                Command="{x:Static global:GlobalMethods.ToolTipCommand}"
                                                CommandParameter="Эта доза рассчитывается либо на основе рассчётного ФЧИ программы, либо на основе указанного пользователем ФЧИ (с учётом пищевых коэффициентов введённых в настройках профиля)"/>
                                        </Label.GestureRecognizers>
                                    </Label>
                                    <Entry
                                        Text="{Binding Path=BolusDoseCalculate, Converter={StaticResource DecimalToStringConverter}, ConverterParameter=2}"
                                        IsReadOnly="True"/>
                                </StackLayout>
                            </Grid>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>

                                <StackLayout
                                    Spacing="0"
                                    Grid.Column="0">

                                    <Label
                                        Text="ФЧИ пользователя: ?">

                                        <Label.GestureRecognizers>
                                            <TapGestureRecognizer
                                                Command="{x:Static global:GlobalMethods.ToolTipCommand}"
                                                CommandParameter="Если вы считаете, что рассчёт ФЧИ программой неверен, укажите более вероятный ФЧИ с учётом выше указанных параметров и своих предыдущих фактических ФЧИ"/>
                                        </Label.GestureRecognizers>
                                    </Label>
                                    <Entry
                                        view:Tag.Tag="InsulinSensitivityUser"
                                        Unfocused="Entry_Unfocused"
                                        Text="{Binding Path=InsulinSensitivityUser, Converter={StaticResource DecimalToStringConverter}}"
                                        Keyboard="Numeric"/>
                                </StackLayout>

                                <StackLayout
                                    Spacing="0"
                                    Grid.Column="1">

                                    <Label
                                        Text="Доза фактическая: ?">

                                        <Label.GestureRecognizers>
                                            <TapGestureRecognizer
                                                Command="{x:Static global:GlobalMethods.ToolTipCommand}"
                                                CommandParameter="{Binding Path=ActiveInformation, StringFormat='{}Складывается из всех инъекций введённых в период активности данного приёма пищи:\&#10;\&#10;{0}'}"/>
                                        </Label.GestureRecognizers>
                                    </Label>
                                    <Entry
                                        IsReadOnly="True"
                                        Text="{Binding Path=BolusDoseTotal, Converter={StaticResource DecimalToStringConverter}}"/>
                                </StackLayout>
                            </Grid>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>

                                <StackLayout
                                    Spacing="0"
                                    Grid.Column="0">

                                    <Label
                                        Text="ФЧИ фактический: ?">

                                        <Label.GestureRecognizers>
                                            <TapGestureRecognizer
                                                Command="{x:Static global:GlobalMethods.ToolTipCommand}"
                                                CommandParameter="Рассчитается автоматически при вводе сахара на отработке по окончании приёма пищи - это реальный ФЧИ, отражающий реальную чувствительность к инсулину в рамках данного приёма пищи"/>
                                        </Label.GestureRecognizers>
                                    </Label>
                                    <Entry
                                        IsReadOnly="True"
                                        Text="{Binding Path=InsulinSensitivityFact, Converter={StaticResource DecimalToStringConverter}, ConverterParameter=3}"/>
                                </StackLayout>

                                <StackLayout
                                    Spacing="0"
                                    Grid.Column="1">

                                    <Label
                                        Text="Ожидаемый сахар:"/>
                                    <Entry
                                        IsReadOnly="True"
                                        Text="{Binding Path=ExpectedGlucose, Converter={StaticResource DecimalToStringConverter}, ConverterParameter=2}"/>
                                </StackLayout>
                            </Grid>
                        </StackLayout>
                    </Frame>

                    <Button
                        Text="Сохранить"
                        Margin="0, 0, 0, 5"
                        BackgroundColor="LightSeaGreen"
                        Command="{Binding Path=OkCommand}"/>

                    <Button
                        Text="Удалить"
                        Margin="0, 0, 0, 5"
                        BackgroundColor="OrangeRed"
                        IsVisible="{Binding Path=IsRemoveVisibility, Mode=OneWay}"
                        Command="{Binding Path=RemoveCommand}"/>
                </StackLayout>
            </ScrollView>

            <!-- Модальное окно ввода инъекции -->
            <Grid
                BackgroundColor="{AppThemeBinding Dark='#80404040', Light='#80808080'}"
                IsVisible="{Binding Path=IsModalInjection, FallbackValue='False'}">

                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Frame
                    Style="{StaticResource FrameBackgroundBase}"
                    Grid.Row="1" Grid.Column="1">

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <!-- https://github.com/xamarin/Xamarin.Forms/issues/9033#issuecomment-762781496 -->
                        <Grid 
                            Grid.Row="0" Grid.Column="0"
                            RowSpacing="0">

                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>

                            <Label
                                Grid.Row="0"
                                Text="Дата:"/>

                            <DatePicker
                                Grid.Row="1"
                                Date="{Binding Source={x:Reference materialDatePickerInjection}, Path=Date}"/>

                            <DatePicker
                                x:Name="materialDatePickerInjection"
                                Grid.Row="1"
                                Visual="Material"
                                Opacity="0"
                                HeightRequest="0"
                                Date="{Binding Path=SelectedInjection.InjectionDate}"/>
                        </Grid>

                        <StackLayout
                            Grid.Row="0" Grid.Column="1"
                            Spacing="0">

                            <Label
                                Text="Время:"/>
                            <TimePicker
                                Time="{Binding Path=SelectedInjection.InjectionTime}"/>
                        </StackLayout>

                        <StackLayout
                            Grid.Row="1" Grid.ColumnSpan="2"
                            Spacing="0">
                            
                            <Label
                                Text="Доза болюсного:"/>
                            <Entry
                                Keyboard="Numeric"
                                Text="{Binding Path=SelectedInjection.BolusDose, Converter={StaticResource DecimalToStringConverter}}"/>
                        </StackLayout>

                        <Button
                            Grid.Row="2" Grid.Column="0"
                            Text="Отмена"
                            Command="{Binding Path=CancelInjectionCommand}"/>

                        <Button
                            Grid.Row="2" Grid.Column="1"
                            Text="Сохранить"
                            Command="{Binding Path=SaveInjectionCommand}"/>
                    </Grid>
                </Frame>
            </Grid>

            <!-- Модальное окно ввода промежуточного измерения -->
            <Grid
                BackgroundColor="{AppThemeBinding Dark='#80404040', Light='#80808080'}"
                IsVisible="{Binding Path=IsModalDimension, FallbackValue='False'}">

                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Frame
                    Style="{StaticResource FrameBackgroundBase}"
                    Grid.Row="1" Grid.Column="1">

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <!-- https://github.com/xamarin/Xamarin.Forms/issues/9033#issuecomment-762781496 -->
                        <Grid 
                            Grid.Row="0" Grid.Column="0"
                            RowSpacing="0">

                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>

                            <Label
                                Grid.Row="0"
                                Text="Дата:"/>

                            <DatePicker
                                Grid.Row="1"
                                Date="{Binding Source={x:Reference materialDatePickerDimension}, Path=Date}"/>

                            <DatePicker
                                x:Name="materialDatePickerDimension"
                                Grid.Row="1"
                                Visual="Material"
                                Opacity="0"
                                HeightRequest="0"
                                Date="{Binding Path=SelectedDimension.DimensionDate}"/>
                        </Grid>

                        <StackLayout
                            Grid.Row="0" Grid.Column="1"
                            Spacing="0">

                            <Label
                                Text="Время:"/>
                            <TimePicker
                                Time="{Binding Path=SelectedDimension.DimensionTime}"/>
                        </StackLayout>

                        <StackLayout
                            Grid.Row="1" Grid.ColumnSpan="2"
                            Spacing="0">

                            <Label
                                Text="Сахар:"/>
                            <Entry
                                Keyboard="Numeric"
                                Text="{Binding Path=SelectedDimension.Glucose, Converter={StaticResource DecimalToStringConverter}}"/>
                        </StackLayout>

                        <Button
                            Grid.Row="2" Grid.Column="0"
                            Text="Отмена"
                            Command="{Binding Path=CancelDimensionCommand}"/>

                        <Button
                            Grid.Row="2" Grid.Column="1"
                            Text="Сохранить"
                            Command="{Binding Path=SaveDimensionCommand}"/>
                    </Grid>
                </Frame>
            </Grid>
        </Grid>       
    </ContentPage.Content>
</ContentPage>