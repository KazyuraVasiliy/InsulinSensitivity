<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="InsulinSensitivity.App">
    <Application.Resources>
        <Style
            TargetType="Frame" x:Key="FrameBackgroundBase">

            <Setter Property="BackgroundColor" Value="{AppThemeBinding Dark='#1d1d1d', Light='#ffffff'}"/>
        </Style>
        
        <Style
            TargetType="Frame" BasedOn="{StaticResource FrameBackgroundBase}" x:Key="Frame">

            <Setter Property="CornerRadius" Value="3"/>
            <Setter Property="Margin" Value="5, 5, 5, 0"/>
            <Setter Property="Padding" Value="10, 5, 10, 5"/>
            <Setter Property="BorderColor" Value="SkyBlue"/>            
        </Style>
    </Application.Resources>
</Application>