<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="InsulinSensitivity.User.UserPage"
             xmlns:converters="clr-namespace:BusinessLogicLayer.Converters;assembly=BusinessLogicLayer"
             xmlns:view="clr-namespace:BusinessLogicLayer.ViewModel;assembly=BusinessLogicLayer"
             Title="Пользователь">

    <ContentPage.Resources>
        <converters:DecimalToStringConverter x:Key="DecimalToStringConverter"/>

        <Style
            TargetType="Frame" x:Key="Frame">

            <Setter Property="CornerRadius" Value="3"/>
            <Setter Property="Padding" Value="10, 5, 10, 5"/>
            <Setter Property="BorderColor" Value="SkyBlue"/>
        </Style>
    </ContentPage.Resources>
    
    <ContentPage.Content>
        <ScrollView>
            <StackLayout            
                Margin="5">

                <!--<Frame 
                    BackgroundColor="#2196F3" 
                    Padding="12" 
                    CornerRadius="3">

                    <Label 
                        Text="Пользователь" 
                        HorizontalTextAlignment="Center" 
                        TextColor="White" 
                        FontSize="24"/>
                </Frame>-->

                <Frame
                    Style="{StaticResource Frame}">

                    <StackLayout
                        Spacing="0">
                        
                        <Label
                            Text="Основная информация"
                            FontAttributes="Bold"
                            FontSize="16"
                            HorizontalOptions="CenterAndExpand"/>

                        <Label
                            Text="Имя:"/>
                        <Entry
                            TabIndex="1"
                            Text="{Binding Path=User.Name}"/>

                        <Label
                            Text="Дата рождения:"/>
                        <DatePicker
                            TabIndex="2"
                            Date="{Binding Path=User.BirthDate}"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <StackLayout
                                Spacing="0"
                                Grid.Column="0">

                                <Label
                                    Text="Рост:"/>
                                <Entry
                                    TabIndex="3"
                                    Keyboard="Numeric"
                                    view:Tag.Tag="Height"
                                    Unfocused="Entry_Unfocused"
                                    Text="{Binding Path=Height}"/>
                            </StackLayout>

                            <StackLayout
                                Spacing="0"
                                Grid.Column="1">

                                <Label
                                    Text="Вес:"/>
                                <Entry
                                    Keyboard="Numeric"
                                    view:Tag.Tag="Weight"
                                    Unfocused="Entry_Unfocused"
                                    Text="{Binding Path=Weight}"/>
                            </StackLayout>
                        </Grid>

                        <Grid
                            IsVisible="{Binding Path=IsEditableFieldsVisible, Mode=OneWay}">
                            
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <StackLayout
                                Spacing="0"
                                Grid.Column="0">

                                <Label
                                    Text="УК:"/>
                                <Entry
                                    TabIndex="3"
                                    Keyboard="Numeric"
                                    view:Tag.Tag="CarbohydrateCoefficient"
                                    Unfocused="Entry_Unfocused"
                                    Text="{Binding Path=CarbohydrateCoefficient, Converter={StaticResource DecimalToStringConverter}}"/>
                            </StackLayout>

                            <StackLayout
                                Spacing="0"
                                Grid.Column="1">

                                <Label
                                    Text="БК:"/>
                                <Entry
                                    Keyboard="Numeric"
                                    view:Tag.Tag="ProteinCoefficient"
                                    Unfocused="Entry_Unfocused"
                                    Text="{Binding Path=ProteinCoefficient, Converter={StaticResource DecimalToStringConverter}}"/>
                            </StackLayout>

                            <StackLayout
                                Spacing="0"
                                Grid.Column="2">

                                <Label
                                    Text="ЖК:"/>
                                <Entry
                                    Keyboard="Numeric"
                                    view:Tag.Tag="FatCoefficient"
                                    Unfocused="Entry_Unfocused"
                                    Text="{Binding Path=FatCoefficient, Converter={StaticResource DecimalToStringConverter}}"/>
                            </StackLayout>
                        </Grid>
                    </StackLayout>
                </Frame>

                <Frame
                    Style="{StaticResource Frame}">

                    <StackLayout
                        Spacing="0">
                        
                        <Label
                            Text="Типы инсулина"
                            FontAttributes="Bold"
                            FontSize="16"
                            HorizontalOptions="CenterAndExpand"/>

                        <Label
                            Text="Базовый:"/>
                        <Picker
                            ItemDisplayBinding="{Binding Path=Name}"                            
                            ItemsSource="{Binding Path=InsulinTypes}"
                            SelectedItem="{Binding Path=User.BasalType, Mode=TwoWay}"/>

                        <Label
                            Text="Болюсный:"/>
                        <Picker
                            ItemDisplayBinding="{Binding Path=Name}"                            
                            ItemsSource="{Binding Path=InsulinTypes}"
                            SelectedItem="{Binding Path=User.BolusType, Mode=TwoWay}"/>
                    </StackLayout>
                </Frame>

                <Frame
                    Style="{StaticResource Frame}">

                    <StackLayout
                        Spacing="0">
                        
                        <Label
                            Text="Уровни глюкозы"
                            FontAttributes="Bold"
                            FontSize="16"
                            HorizontalOptions="CenterAndExpand"/>

                        <Label
                            Text="Гипогликемия:"/>
                        <Entry
                            Keyboard="Numeric"
                            view:Tag.Tag="Hypoglycemia"
                            Unfocused="Entry_Unfocused"                            
                            Text="{Binding Path=Hypoglycemia, Converter={StaticResource DecimalToStringConverter}}"/>

                        <Label
                            Text="Низкий сахар:"/>
                        <Entry
                            Keyboard="Numeric"
                            view:Tag.Tag="LowSugar"
                            Unfocused="Entry_Unfocused"
                            Text="{Binding Path=LowSugar, Converter={StaticResource DecimalToStringConverter}}"/>

                        <Label
                            Text="Целевая глюкоза:"/>
                        <Entry
                            Keyboard="Numeric"
                            view:Tag.Tag="TargetGlucose"
                            Unfocused="Entry_Unfocused"
                            Text="{Binding Path=TargetGlucose, Converter={StaticResource DecimalToStringConverter}}"/>

                        <Label
                            Text="Высокий сахар:"/>
                        <Entry
                            Keyboard="Numeric"
                            view:Tag.Tag="HighSugar"
                            Unfocused="Entry_Unfocused"
                            Text="{Binding Path=HighSugar, Converter={StaticResource DecimalToStringConverter}}"/>

                        <Label
                            Text="Гипергликимия:"/>
                        <Entry
                            Keyboard="Numeric"
                            view:Tag.Tag="Hyperglycemia"
                            Unfocused="Entry_Unfocused"
                            Text="{Binding Path=Hyperglycemia, Converter={StaticResource DecimalToStringConverter}}"/>
                    </StackLayout>
                </Frame>

                <Frame
                    Style="{StaticResource Frame}">

                    <StackLayout
                        Spacing="0">
                        
                        <Label
                            Text="Дополнительная информация"
                            FontAttributes="Bold"
                            FontSize="16"
                            HorizontalOptions="CenterAndExpand"/>

                        <Label
                            Text="Точность дозирования болюса:"/>
                        <Picker                            
                            ItemsSource="{Binding Path=DosingAccuracies}"
                            SelectedItem="{Binding Path=User.DosingAccuracy, Mode=TwoWay}"/>

                        <StackLayout
                            Spacing="0"
                            Orientation="Horizontal">

                            <Label
                                VerticalOptions="Center"
                                Text="Помпа:"/>
                            <Switch
                                VerticalOptions="Center"
                                IsToggled="{Binding Path=User.IsPump}"/>
                        </StackLayout>
                    </StackLayout>
                </Frame>

                <Button
                    Text="Сохранить"
                    Margin="0, 0, 0, 5"
                    BackgroundColor="LightSeaGreen"
                    Command="{Binding Path=OkCommand}"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>